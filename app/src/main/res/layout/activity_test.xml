<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context="app1.bestfitapp.TestActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/layout_background"
                android:layout_height="300dp">
                <ImageView
                    android:id="@+id/iv_image_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="82dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:layoutDirection="ltr"
                    android:layout_height="48dp">
                    <Button
                        android:id="@+id/btn_test_1"
                        android:layout_width="60dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Test"/>

                    <TextView android:id="@+id/v_1_1"
                          android:layout_width="match_parent"
                          android:layout_weight="1"
                          android:layout_height="match_parent"/>
                    <TextView android:id="@+id/v_1_2"
                          android:layout_width="match_parent"
                          android:layout_weight="1"
                          android:layout_height="match_parent"/>
                    <TextView android:id="@+id/v_1_3"
                          android:layout_width="match_parent"
                          android:layout_weight="1"
                          android:layout_height="match_parent"/>
                    <TextView android:id="@+id/v_1_4"
                          android:layout_width="match_parent"
                          android:layout_weight="1"
                          android:layout_height="match_parent"/>
                    <TextView android:id="@+id/v_1_5"
                              android:layout_width="match_parent"
                              android:layout_weight="1"
                              android:layout_height="match_parent"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/layout_background"
                android:layout_height="300dp">
                <ImageView
                    android:id="@+id/iv_image_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="52dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:layoutDirection="ltr"
                    android:layout_height="48dp">
                    <Button
                        android:id="@+id/btn_test_2"
                        android:layout_width="60dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Test"/>

                    <View android:id="@+id/v_2"
                          android:layout_width="match_parent"
                          android:layout_weight="1"
                          android:layout_height="match_parent"/>
                 </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/layout_background"
                android:layout_height="300dp">
                <ImageView
                    android:id="@+id/iv_image_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="82dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:layoutDirection="ltr"
                    android:layout_height="48dp">
                    <Button
                        android:id="@+id/btn_test_3"
                        android:layout_width="60dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Test"/>

                    <View android:id="@+id/v_3_1"
                          android:layout_width="match_parent"
                          android:layout_weight="1"
                          android:layout_height="match_parent"/>
                    <View android:id="@+id/v_3_2"
                          android:layout_width="match_parent"
                          android:layout_weight="1"
                          android:layout_height="match_parent"/>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>




    </ScrollView>


</LinearLayout>
